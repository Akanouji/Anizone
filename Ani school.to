}// Function to fetch data from the MyAnimeList API
async function fetchAnimeData(endpoint) {
  const apiKey = 'YOUR_API_KEY'; // Replace 'YOUR_API_KEY' with your actual API key
  const response = await fetch(`https://api.myanimelist.net/v2/${endpoint}`, {
    headers: {
      'Authorization': `Bearer ${apiKey}`
    }
  });
  const data = await response.json();
  return data;
}

// Function to display anime data
function displayAnimeData(animeData, category) {
  console.log(`--- ${category} ---`);
  animeData.forEach(anime => {
    console.log(anime.node.title);
  });
  console.log('-----------------');
}

// Fetch most popular anime
fetchAnimeData('ranking/anime').then(data => {
  const mostPopularAnime = data.data;
  displayAnimeData(mostPopularAnime, 'Most Popular Anime');
});

// Fetch all viewed anime
fetchAnimeData('anime-ranking').then(data => {
  const allViewedAnime = data.data;
  displayAnimeData(allViewedAnime, 'All Viewed Anime');
});

// Fetch all anime
fetchAnimeData('anime').then(data => {
  const allAnime = data.data;
  displayAnimeData(allAnime, 'All Anime');
});
